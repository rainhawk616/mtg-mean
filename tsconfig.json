{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": false,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "lib": [
            "dom",
            "es2018"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "target": "es6",
    },
    "exclude": [
        "src/app",
        "node_modules",
        "src/public",
    ]
}